<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Roadworks">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteGrey"
        android:fontFamily="@font/sen"
        android:orientation="vertical"
        tools:ignore="MissingConstraints" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:paddingTop="25dp"
            android:text="@string/RoadIncidents_Title"
            android:textAlignment="center"
            android:textColor="@color/darkGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawablePadding="20dp"
            android:layout_marginStart="130dp"
            app:drawableStartCompat="@drawable/titleicon1" />

<!--        <ImageView-->
<!--            android:layout_width="35dp"-->
<!--            android:layout_height="25dp"-->
<!--            android:layout_marginStart="370dp"-->
<!--            android:layout_marginTop="25dp"-->
<!--            android:src="@drawable/map1"-->
<!--            tools:ignore="ContentDescription,ImageContrastCheck" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp">

            <Spinner
                android:id="@+id/filterDropdown"
                android:layout_width="53dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/filtericon"
                android:spinnerMode="dropdown"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:layout_width="400dp"
                android:layout_height="45dp"
                android:layout_marginStart="110dp"
                android:autofillHints=""
                android:background="@drawable/searchbar"
                android:drawableEnd="@drawable/search"
                android:hint="@string/search_on_a_specific_road"
                android:inputType="text"
                android:labelFor="@+id/filterDropdown"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHint="#757575"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="473dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="140dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="14dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_horizontal|top"
                android:letterSpacing="0.1"
                android:text="@string/period"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/pastrw"
                android:drawablePadding="5dp"
                android:letterSpacing="0.05"
                android:text="@string/periodItem3"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:drawableStart="@drawable/currentrw"
                android:drawablePadding="5dp"
                android:letterSpacing="0.05"
                android:text="@string/periodItem2"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:drawableStart="@drawable/futurerw"
                android:drawablePadding="5dp"
                android:letterSpacing="0.05"
                android:text="@string/periodItem"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginStart="50dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/roadworksicon"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="8dp"
                    android:letterSpacing="0.1"
                    android:text="@string/RoadworkItem"
                    android:textColor="@color/darkGreen"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="330dp"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@drawable/futurerw"
                    android:drawablePadding="2dp"
                    android:letterSpacing="0.05"
                    android:text="@string/RoadNumber"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="UseCompatTextViewDrawableXml" />

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="46dp"
                    android:letterSpacing="0.05"
                    android:text="@string/RwLocation"
                    android:textColor="@color/blueGrey"
                    android:textSize="18sp"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="95dp"
                    android:letterSpacing="0.05"
                    android:text="@string/RwPeriod"
                    android:textColor="@color/blueGrey"
                    android:textSize="18sp"
                    tools:ignore="TextContrastCheck" />

                <ImageButton
                    android:layout_width="400dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="125dp"
                    android:background="@color/darkGreen"
                    android:src="#6D9773"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck" />


            </androidx.cardview.widget.CardView>

        </ScrollView>
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/back"
            android:layout_marginStart="20dp"
            android:contentDescription="TODO" />





    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>