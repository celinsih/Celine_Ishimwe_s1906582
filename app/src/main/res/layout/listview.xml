<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/roadworkIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="TODO"
            android:src="@drawable/roadworksicon"/>

        <TextView
            android:id="@+id/roadworkName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.1"
            android:text="@string/RoadworkItem"
            android:textColor="@color/darkGreen"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="2dp"
            android:letterSpacing="0.05"
            android:text="@string/RoadNumber"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/status"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/currentrw"
            android:layout_marginStart="321dp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="46dp"
            android:letterSpacing="0.05"
            android:text="@string/RwLocation"
            android:textColor="@color/blueGrey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="95dp"
            android:letterSpacing="0.05"
            android:text="@string/RwPeriod"
            android:textColor="@color/blueGrey"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="360dp"
            android:layout_height="5dp"
            android:layout_marginTop="125dp"
            android:background="@color/darkGreen"
            android:src="#6D9773"
             />

    </androidx.cardview.widget.CardView>
</LinearLayout>