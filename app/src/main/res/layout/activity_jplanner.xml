<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".JPlanner"
    android:background="@color/whiteGrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_journeyPlanner"
            android:drawableStart="@drawable/jplanner"
            android:textSize="20sp"
            android:textColor="@color/darkGreen"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:drawablePadding="10dp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/spoint"
            android:layout_marginTop="50dp"
            android:layout_marginStart="-10dp"/>

        <EditText
            android:id="@+id/et_source"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/searchbar"
            android:hint="Enter your starting location"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="#757575"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/Joourney_date"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:hint="Enter the date of your journey"
            android:layout_marginTop="110dp"
            android:background="@drawable/searchbar"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginStart="-10dp"
            android:textColorHint="#757575"
            android:textSize="15sp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />
        <ImageButton
            android:id="@+id/display_journey"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@drawable/sbutton"
            android:layout_marginTop="170dp"
            android:layout_marginStart="100dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        />



    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:src="@drawable/back"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>